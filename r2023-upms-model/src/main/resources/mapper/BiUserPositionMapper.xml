<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.bipark.reco.upms.model.mapper.BiUserPositionMapper">
	
	<sql id="UserPositionWhere">
		<where>	      				
	       <if test="@Ognl@isNotEmpty(username)">
				AND t.username = #{username}
			</if>
	       <if test="@Ognl@isNotEmpty(lat)">
				AND t.lat = #{lat}
			</if>
	       <if test="@Ognl@isNotEmpty(lng)">
				AND t.lng = #{lng}
			</if>
		</where>
	</sql>

    <select id="findBy" resultType="cn.bipark.reco.upms.model.viewmodel.list.UserPositionListVM">
    	SELECT 
			t.id				id,
			t.username				username,
			t.lat				lat,
			t.lng				lng
	    FROM bi_user_position t 
		<include refid="UserPositionWhere"/>		
		<if test="@Ognl@isNotEmpty(orderBy)">
			ORDER BY ${orderBy}
		</if>
    </select>
	
</mapper>

