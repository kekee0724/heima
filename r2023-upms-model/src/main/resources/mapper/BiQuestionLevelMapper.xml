<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.bipark.reco.upms.model.mapper.BiQuestionLevelMapper">
	
	<sql id="QuestionLevelWhere">
		<where>	      				
	       <if test="@Ognl@isNotEmpty(questionId)">
				AND t.question_id = #{questionId}
			</if>
	       <if test="@Ognl@isNotEmpty(levelId)">
				AND t.level_id = #{levelId}
			</if>
		</where>
	</sql>

    <select id="findBy" resultType="cn.bipark.reco.upms.model.viewmodel.list.QuestionLevelListVM">
    	SELECT 
			t.id				id,
			t.question_id				questionId,
			t.level_id				levelId
	    FROM bi_question_level t 
		<include refid="QuestionLevelWhere"/>		
		<if test="@Ognl@isNotEmpty(orderBy)">
			ORDER BY ${orderBy}
		</if>
    </select>
	
</mapper>

