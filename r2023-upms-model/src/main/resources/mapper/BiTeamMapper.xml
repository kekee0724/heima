<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.bipark.reco.upms.model.mapper.BiTeamMapper">
	
	<sql id="TeamWhere">
		<where>	      				
	       <if test="@Ognl@isNotEmpty(teamName)">
				AND t.team_name = #{teamName}
			</if>
	       <if test="@Ognl@isNotEmpty(teamOrg)">
				AND t.team_org = #{teamOrg}
			</if>
		</where>
	</sql>

    <select id="findBy" resultType="cn.bipark.reco.upms.model.viewmodel.list.TeamListVM">
    	SELECT 
			t.id				id,
			t.team_name				teamName,
			t.team_org				teamOrg
	    FROM bi_team t 
		<include refid="TeamWhere"/>		
		<if test="@Ognl@isNotEmpty(orderBy)">
			ORDER BY ${orderBy}
		</if>
    </select>
	
</mapper>

